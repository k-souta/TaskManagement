<div class="contents row">
  <div class="container login-container">
    <h2>Sign in</h2>
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

<div class="field">
  <%= f.label :nickname %><br />
  <%= f.text_field :nickname, class: 'input-field' %>
</div>

<div class="field">
  <%= f.label :email %><br />
  <%= f.email_field :email, class: 'input-field', autofocus: true %>
</div>

<div class="field">
  <%= f.label :password %><br />
  <%= f.password_field :password, autocomplete: "off", class: 'input-field' %>
</div>


      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.label :remember_me %>
          <%= f.check_box :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Sign up", class: 'btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
